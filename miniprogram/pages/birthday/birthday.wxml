<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="section section_gap">
    <view class="section__title">姓名</view>
    <input  name="name" class="section_input" placeholder="昵称或姓名"/>
  </view>
  <view class="section section_gap">
    <view class="section__title">备注</view>
    <input  name="note" class="section_input" placeholder="亲爱滴妈咪"/>
  </view>
  <view class="section section_gap">
    <view class="sex">性别</view>
    <radio-group name="sex"  class="radio-group section_input">
      <label><radio color="#fcb022"  value="男" checked/>男</label>
      <label><radio color="#fcb022"  value="女"/>女</label>
    </radio-group>
  </view>
  <view class="section section_gap">
    <view class="section__title">生日</view>
    <view class="section_input row-flex">
      <radio-group name="calendar" class="radio-group">
        <label><radio color="#fcb022"  value="0" checked/>阴历</label>
        <label><radio color="#fcb022"  value="1"/>阳历</label>
      </radio-group>
      <picker mode="date" name="birthday" class="picker-date" value="{{date}}" bindchange="bindTimeChange">
        <view class="picker">
          {{date || '请选择日期'}}
        </view>
      </picker>
    </view>
  </view>
  <view class="section section_gap">
    <view class="section__title">关系</view>
    <picker name="relation" class="section_input" value="{{index}}" range="{{array}}" bindchange="bindPickerChange">
      <view class="picker">
        {{array[index]}}
      </view>
    </picker>
  </view>
  <view class="section section_gap">
    <view class="section__title">喜好</view>
    <input  name="like" class="section_input" placeholder="爱打扮、爱看书"/>
  </view>
  <view class="section section_gap">
    <view class="section__title">是否提前通知我</view>
    <radio-group name="isNotice" class="radio-group section_input">
      <label><radio value="0" color="#fcb022"  checked/>是</label>
      <label><radio value="1" color="#fcb022" />否</label>
    </radio-group>
  </view>
  <view class="button-area">
    <button loading="{{loading}}"  class="btn-add" formType="submit"> 保存信息 </button>
  </view>
</form>
<view class="container">
    <dialog id='dialog' 
      title='{{dialogData.title}}' 
      content='{{dialogData.content}}' 
      cancelText='取消' 
      confirm='确定'
      bind:cancelEvent="_cancelEvent"  
      bind:confirmEvent="_cancelEvent">
    </dialog>
</view>
