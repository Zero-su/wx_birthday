/**index.wxss**/
.swiper-tab {
    width: 100%;
    border-bottom: 2rpx solid #777777;
    text-align: center;
    line-height: 80rpx;
}

.swiper-tab-list {
    font-size: 30rpx;
    display: inline-block;
    width: 33.33%;
    color: #777777;
}

.on {
    color: #da7c0c;
    border-bottom: 5rpx solid #da7c0c;
}

.swiper-box {
    display: block;
    height: 100%;
    width: 100%;
    overflow: hidden;
}

.swiper-box view {
    text-align: center;
}
.add-day{
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
}
.row-view{
    width: calc(100% - 60rpx);
    height: 300rpx;
    border-radius: 10rpx;
    box-shadow: 0 0 5rpx #000;
    margin: 0 auto;
    margin-top: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.row-view .btn-add{
    width: 300rpx;
}
.birthLists, .memorialLists{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}
.birthLists .birthlist, .memorialLists .memoriallist{
  display: flex;
  height: 200rpx;
  width: 100%;
  border-bottom: 5rpx solid #f4f4f4;
}
.memorialLists .memoriallist{
  height: 160rpx;
}
.birthLists .birthlist .info, .memorialLists .memoriallist .info{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.birthLists .birthlist .info-1, .memorialLists .memoriallist .info-1{
  width: 156rpx;
  height: 100%;
  align-items: center;
}
.info-1 .imageBox{
  width: 110rpx;
  height: 110rpx;
}
.info-1 .text, .info-2 .text{
  color: #838383;
  font-size: 25rpx;
}
.birthLists .birthlist .info-2, .memorialLists .memoriallist .info-2{
  width: 250rpx;
  height: 100%;
  align-items: flex-start;
}
.birthLists .birthlist .info-3, .memorialLists .memoriallist .info-3{
  flex: 1;
  height: 100%;
  align-items: flex-end;
  padding-right: 20rpx;
}
.info-3 .text1{
  color: #da7c0c;
  font-size: 45rpx;
  font-weight: bold;
}
.info-3 .text2{
  color: #838383;
  font-size: 25rpx;
}
.info-3 .text3{
  color: #838383;
  font-size: 25rpx;
}